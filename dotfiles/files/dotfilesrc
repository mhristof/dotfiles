# vim :ft=bash:

for f in ~/.autojump/etc/profile.d/autojump.sh \
         ~/.bashrc_local; do
    if [[ -f $f ]]; then
        source $f;
    fi
done

export PATH=~/bin:$PATH
export PATH=/usr/local/opt/python/bin:$PATH
export PATH=~/Library/Python/2.7/bin:/usr/local/bin:~/.fzf/bin:$PATH
export PATH=/usr/local/opt/coreutils/libexec/gnubin:$PATH
export PATH=/usr/local/sbin:$PATH
export PATH=~/umbrella/bin:$PATH
export PATH=~/.global-modules/bin/:$PATH

brew --prefix cookiecutter &> /dev/null && {
    export PATH=$(brew --prefix cookiecutter):$PATH
}

which go &> /dev/null && {
    export GOPATH=$(go env GOPATH)
    export PATH=$GOPATH/bin:$PATH
}

export LESSOPEN="| highlight %s -O xterm256"
