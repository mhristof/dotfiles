#!/usr/bin/env bash
set -euo pipefail

URL=$1

die() {
    echo "$*" 1>&2
    exit 1
}

if [[ -z $URL ]]; then
    die "Error, please provide URL to clone"
fi

dest=${URL/https:\/\//~/code/}
dest=${dest/http:\/\//~/code/}
dest=${dest/git@github.com:/~/code/github.com/}
dest=${dest/.git/}

git clone "$URL" "$dest"
